  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const menuButton = document.getElementById("menu-button");
      const mobileMenu = document.getElementById("mobile-menu");
      menuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
        menuButton.classList.toggle("fa-bars");
        menuButton.classList.toggle("fa-times");
      });
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          e.preventDefault();

          document.querySelector(this.getAttribute("href")).scrollIntoView({
            behavior: "smooth",
          });
        });
      });
      const slogans = [
        "The Internet of Blockchain.",
        "The Future of Finance.",
        "The Revolution of Digital Currency.",
        "The Gateway to Global Transactions.",
        "The Power of Decentralization.",
        "The Promise of Secure Transactions.",
        "The Evolution of Blockchain Technology.",
        "The Platform for Next-Generation Finance.",
        "The Foundation of Financial Freedom.",
        "The Solution for Digital Harmony.",
      ];

      let index = 0;
      let textIndex = 0;
      let typingSpeed = 100;

      function typeSlogan() {
        if (textIndex < slogans[index].length) {
          document.getElementById("slogan").textContent +=
            slogans[index][textIndex];
          textIndex++;
          setTimeout(typeSlogan, typingSpeed);
        } else {
          setTimeout(eraseSlogan, 2000);
        }
      }

      function eraseSlogan() {
        if (textIndex > 3) {
          let tempText = slogans[index].substring(0, textIndex);
          document.getElementById("slogan").textContent = tempText;
          textIndex--;
          setTimeout(eraseSlogan, typingSpeed / 2);
        } else {
          document.getElementById("slogan").textContent = "";
          index++;
          if (index >= slogans.length) {
            index = 0;
          }
          textIndex = 0;
          setTimeout(typeSlogan, typingSpeed);
        }
      }

      typeSlogan();
    });
    window.onscroll = () => {
      if (
        document.body.scrollTop > 20 ||
        document.documentElement.scrollTop > 20
      ) {
        document.getElementById("scrollBtn").classList.remove("hidden");
      } else {
        document.getElementById("scrollBtn").classList.add("hidden");
      }
    };

    function scrollToTop() {
      document.body.scrollTop = 0;
      document.documentElement.scrollTop = 0;
    }
  </script>

